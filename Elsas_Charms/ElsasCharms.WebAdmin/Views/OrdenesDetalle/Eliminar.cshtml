@model ElsasCharms.BL.OrdenDetalle

@{
    ViewBag.Title = "Eliminar";
}

<h2>Eliminar</h2>

<h3>&iquest;Está seguro que desea Eliminar este registro?</h3>
<div>
    <h4>Eliminar Producto de orden.</h4>
    <hr />
    <dl class="dl-horizontal">
        <dt>
            Orden No:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.OrdenId)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Producto):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Producto.Descripcion)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Cantidad):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Cantidad)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Precio):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Precio)
        </dd>

        <dt>
            @Html.DisplayNameFor(model => model.Total):
        </dt>

        <dd>
            @Html.DisplayFor(model => model.Total)
        </dd>

    </dl>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        @Html.HiddenFor(model => model.OrdenId)

        <div class="form-actions no-color">
            <input type="submit" value="Eliminar" class="btn btn-default" /> |
            @Html.ActionLink("Regresar a la Lista", "Index", new { id = Model.OrdenId})
        </div>
    }
</div>
